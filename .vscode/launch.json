{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "synthetic data",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/synthetic",
            "args": [
                "--plan=${workspaceFolder}/nst-test/data/synthetic/plan.json",
                "--outfile=${workspaceFolder}/nst-test/data/synthetic/synthetic.mcap"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "mount-data-and-build",
        },
        {
            "name": "spectrogram",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/spectrogram",
            "args": [
                "--infile=${workspaceFolder}/nst-test/data/synthetic/synthetic.mcap",
                "--outfile=${workspaceFolder}/nst-test/data/spectrogram/spectrogram_output.mcap"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "mount-data-and-build"
        }
    ]
}